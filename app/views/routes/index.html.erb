<h1>Your Routes</h1>
<table>
	<tr>
		<th>Route Name</th>
		<th colspan="2"></th>
	</tr>

	<% @routes.each do |route| %>
	<tr>
		<td><%= route.route_name %></td>
		<td><%= link_to 'Show', route_path(route) %></td>
		<td><%= link_to 'Edit', edit_route_path(route) %></td>
		<td><%= link_to 'Delete', route_path(route), method: :delete, data: {confirm: 'Are you sure?' } %></td>
	</tr>
<% end %>
</table>

<%= link_to 'Back', root_path %>
